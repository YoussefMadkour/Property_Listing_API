# Staging Environment Configuration
# Copy this file to .env for staging deployment

# Application Configuration
APP_NAME=Property Listing API
APP_VERSION=1.0.0
ENVIRONMENT=staging
DEBUG=false
TESTING=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME_STRONG_PASSWORD@db:5432/property_listings_staging
POSTGRES_DB=property_listings_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432

# JWT Configuration - CHANGE THESE VALUES
JWT_SECRET_KEY=CHANGE_ME_STRONG_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG_FOR_STAGING
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=https://staging.yourapp.com,https://staging-admin.yourapp.com

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_PORT=8000

# Staging specific settings
LOG_LEVEL=info

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_FILE=/app/logs/app.log

# Performance Settings
WORKER_PROCESSES=2
MAX_CONNECTIONS=1000