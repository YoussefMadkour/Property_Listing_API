# Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Change all CHANGE_ME values before deploying

# Application Configuration
APP_NAME=Property Listing API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Database Configuration - CHANGE THESE VALUES
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME_VERY_STRONG_PASSWORD@db:5432/property_listings
POSTGRES_DB=property_listings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_VERY_STRONG_PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432

# JWT Configuration - CHANGE THESE VALUES
JWT_SECRET_KEY=CHANGE_ME_VERY_STRONG_SECRET_KEY_AT_LEAST_64_CHARACTERS_LONG_FOR_PRODUCTION_SECURITY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# API Configuration - CHANGE CORS_ORIGINS
API_V1_PREFIX=/api/v1
CORS_ORIGINS=https://yourapp.com,https://admin.yourapp.com

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_PORT=8000

# Production specific settings
LOG_LEVEL=warning

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Redis Configuration - CHANGE PASSWORD
REDIS_PASSWORD=CHANGE_ME_VERY_STRONG_REDIS_PASSWORD

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *

# SSL Configuration (Required for production HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
LOG_FILE=/app/logs/app.log

# Performance Settings
WORKER_PROCESSES=4
MAX_CONNECTIONS=2000

# Security Settings
SECURE_COOKIES=true
HTTPS_ONLY=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# File Storage (for cloud deployment)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_REGION=us-east-1

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@yourapp.com